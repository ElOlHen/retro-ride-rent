<div class="form-wrapper mb-5">
  <%= simple_form_for([@car, @booking]) do |f| %>
      <%= f.input :date_begin,
                  as: :string,
                  input_html: { id: "range_start", data: {  datepicker_target:"input1" } } %>

      <%= f.input :date_end,
                  as: :string,
                  input_html: { id: "range_end", data: {  datepicker_target:"input2", action: "change->datepicker#dynamicPrice" } } %>

    <%= f.input :message,
                as: :text,
                :input_html => { :cols => 5, :rows => 5 },
                class: "fs-1" %>
    <p><strong>Booking for: <span id="total-nights" data-datepicker-target="span2">0</span></strong> day(s)</p>
    <p><strong>Total Price:</strong> <span id="total-price"  data-datepicker-target="span3"></span>â‚¬</p>
    <div class="d-flex justify-content-center align-items-center mt-5">
      <%= f.submit %>
       <% end %>
    </div>
